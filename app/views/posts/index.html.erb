<div class="col-md-9">
  <%= render 'form'%>

  <% @posts.each do |post| %>
    <div class="well">
          <h1> <%= post.title %> </h1>
          <%= post.content %>
          <%= link_to 'Show', post %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= render :partial => 'comments/form', object: post.comments.build, as: :comment %> 
    </div>
  <% end %>
</div>
